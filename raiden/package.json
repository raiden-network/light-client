{
  "name": "raiden",
  "version": "0.0.1",
  "description": "Raiden Light Client library and utilities",
  "main": "src/index.ts",
  "types": "dist/index.d.ts",
  "scripts": {
    "start": "tsc --watch",
    "build": "tsc",
    "test": "ts-node test/test.ts",
    "lint": "eslint src/**.ts test/**.ts",
    "clean": "rimraf dist/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/raiden-network/light-client.git"
  },
  "keywords": [
    "raiden",
    "ethereum",
    "blockchain",
    "2ndlayer",
    "scaling",
    "payments",
    "transfers",
    "web3"
  ],
  "author": "brainbot labs est.",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/raiden-network/light-client/issues"
  },
  "homepage": "https://github.com/raiden-network/light-client#readme",
  "devDependencies": {
    "@types/redux-logger": "^3.0.7",
    "@typescript-eslint/eslint-plugin": "^1.4.2",
    "@typescript-eslint/parser": "^1.4.2",
    "eslint": "^5.14.1",
    "eslint-config-prettier": "^4.1.0",
    "rimraf": "^2.6.3",
    "ts-node": "^8.0.2",
    "typescript": "^3.3.3333"
  },
  "dependencies": {
    "ethers": "^4.0.26",
    "redux": "^4.0.1",
    "redux-logger": "^3.0.6",
    "redux-observable": "^1.0.0",
    "rxjs": "^6.4.0"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
