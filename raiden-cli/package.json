{
  "name": "raiden-cli",
  "version": "0.1.0",
  "description": "Raiden Light Client standalone command-line app",
  "main": "build/index.js",
  "scripts": {
    "lint": "eslint --max-warnings 0 --ext '.ts' .",
    "build": "tsc",
    "build:bundle": "webpack --progress"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/raiden-network/light-client.git"
  },
  "author": "brainbot labs est.",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/raiden-network/light-client/issues"
  },
  "homepage": "https://github.com/raiden-network/light-client#readme",
  "devDependencies": {
    "@types/express": "^4.17.6",
    "@types/inquirer": "^6.5.0",
    "@types/node": "13.13.5",
    "@types/node-localstorage": "^1.3.0",
    "@types/yargs": "^15.0.4",
    "@typescript-eslint/eslint-plugin": "^2.31.0",
    "@typescript-eslint/parser": "^2.31.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-prettier": "^3.1.3",
    "native-ext-loader": "^2.3.0",
    "prettier": "^2.0.5",
    "ts-loader": "^7.0.2",
    "typescript": "^3.8.3",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11"
  },
  "dependencies": {
    "ethers": "^4.0.47",
    "express": "^4.17.1",
    "inquirer": "^7.1.0",
    "loglevel": "^1.6.8",
    "node-localstorage": "^2.1.6",
    "raiden-ts": "^0.8.0",
    "rxjs": "^6.5.5",
    "wrtc": "^0.4.4",
    "yargs": "^15.3.1"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "env": {
      "browser": true,
      "es6": true,
      "node": true
    },
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "rules": {
      "import/order": [
        "error"
      ],
      "import/export": "off",
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/no-non-null-assertion": "off",
      "@typescript-eslint/no-empty-interface": "off",
      "@typescript-eslint/no-unused-vars": [
        "warn",
        {
          "varsIgnorePattern": "^_"
        }
      ]
    },
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended",
      "plugin:import/errors",
      "plugin:import/warnings",
      "plugin:import/typescript"
    ]
  },
  "prettier": {
    "semi": true,
    "trailingComma": "all",
    "singleQuote": true,
    "printWidth": 99,
    "tabWidth": 2
  }
}
