{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "./build",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "sourceMap": true,
    "allowJs": true,
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "baseUrl": ".",
    "paths": {
      "matrix-js-sdk": ["node_modules/raiden-ts/node_modules/@types/matrix-js-sdk/index.d.ts"],
      "*": ["../raiden-ts/node_modules/*", "node_modules/@types/*", "node_modules/*", "*"]
    }
  },
  "include": [
    "./src/**/*.ts"
  ]
}
