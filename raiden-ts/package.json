{
  "name": "raiden-ts",
  "version": "0.1.0",
  "description": "Raiden Light Client Typescript/Javascript SDK",
  "main": "dist:cjs/index.js",
  "module": "dist/index.js",
  "esnext": "dist/index.js",
  "typescript:main": "src/index.ts",
  "types": "dist/index.d.ts",
  "scripts": {
    "start": "npm run contracts && tsc -p src/tsconfig.cjs.json -w",
    "build": "npm run contracts && tsc -p src/tsconfig.json && tsc -p src/tsconfig.cjs.json && npm run contracts:post",
    "test": "npm run lint && NODE_ENV=development jest --coverage=true",
    "lint": "eslint --max-warnings 0 --ext '.ts' .",
    "clean": "rimraf dist/ dist:cjs/ .coverage/ src/contracts/ src/abi/ src/deployment/",
    "contracts:pre": "node ./scripts/copyContracts.js prebuild",
    "contracts:build": "typechain --target=ethers 'src/abi/*.json' --outDir src/contracts",
    "contracts:post": "node ./scripts/copyContracts.js postbuild",
    "contracts": "npm run contracts:pre && npm run contracts:build",
    "postinstall": "npm run build",
    "prepare": "npm run clean && npm run build",
    "docs:generate": "typedoc --ignoreCompilerErrors --mode file --theme markdown --platform vuepress --out ./docs ./src",
    "docs:build": "vuepress build docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/raiden-network/light-client.git"
  },
  "keywords": [
    "raiden",
    "ethereum",
    "blockchain",
    "2ndlayer",
    "scaling",
    "payments",
    "transfers",
    "web3"
  ],
  "author": "brainbot labs est.",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/raiden-network/light-client/issues"
  },
  "homepage": "https://github.com/raiden-network/light-client#readme",
  "devDependencies": {
    "@types/events": "^3.0.0",
    "@types/isomorphic-fetch": "0.0.35",
    "@types/jest": "^24.0.23",
    "@types/lodash": "^4.14.149",
    "@types/lossless-json": "^1.0.0",
    "@types/memdown": "^3.0.0",
    "@types/node-localstorage": "^1.3.0",
    "@types/redux-logger": "^3.0.7",
    "@types/tiny-async-pool": "^1.0.0",
    "@typescript-eslint/eslint-plugin": "^2.9.0",
    "@typescript-eslint/parser": "^2.8.0",
    "eslint": "^6.7.1",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-jsdoc": "^18.1.5",
    "eslint-plugin-prettier": "^3.1.1",
    "ganache-cli": "^6.7.0",
    "jest": "^24.9.0",
    "jest-junit": "^9.0.0",
    "memdown": "^5.1.0",
    "node-localstorage": "^2.1.4",
    "prettier": "^1.18.2",
    "rimraf": "^3.0.0",
    "rxjs-marbles": "^5.0.3",
    "tiny-async-pool": "^1.1.0",
    "ts-jest": "^24.2.0",
    "ts-node": "^8.5.3",
    "typechain": "^1.0.3",
    "typechain-target-ethers": "^1.0.3",
    "typedoc": "0.15.0",
    "typedoc-plugin-markdown": "^2.2.11",
    "typescript": "3.5.3",
    "vuepress": "^1.2.0"
  },
  "dependencies": {
    "abort-controller": "^3.0.0",
    "ethers": "^4.0.40",
    "fp-ts": "^2.2.0",
    "io-ts": "^2.0.1",
    "isomorphic-fetch": "^2.2.1",
    "lodash": "^4.17.15",
    "lossless-json": "^1.0.3",
    "matrix-js-sdk": "^2.4.5",
    "redux": "^4.0.4",
    "redux-logger": "^3.0.6",
    "redux-observable": "^1.2.0",
    "rxjs": "^6.5.3",
    "typesafe-actions": "^4.4.2"
  },
  "peerDependencies": {
    "ethers": "^4.0.40"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "jsdoc"
    ],
    "env": {
      "browser": true,
      "es6": true,
      "node": true
    },
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "rules": {
      "@typescript-eslint/no-non-null-assertion": "off",
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/no-triple-slash-reference": "off",
      "@typescript-eslint/no-empty-interface": "off",
      "@typescript-eslint/triple-slash-reference": "off",
      "jsdoc/no-types": "warn",
      "jsdoc/require-param-type": "off",
      "jsdoc/require-returns-type": "off",
      "jsdoc/require-hyphen-before-param-description": "warn",
      "jsdoc/require-jsdoc": [
        1,
        {
          "publicOnly": true
        }
      ]
    },
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended",
      "plugin:jsdoc/recommended"
    ]
  },
  "eslintIgnore": [
    "raiden-contracts/*",
    "scripts/*",
    "dist*/*",
    "typings/*",
    "src/contracts/*"
  ],
  "prettier": {
    "semi": true,
    "trailingComma": "all",
    "singleQuote": true,
    "printWidth": 99,
    "tabWidth": 2
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^raiden-ts/(.*)$": "<rootDir>/src/$1"
    },
    "testMatch": [
      "<rootDir>/tests/**/*.spec.ts"
    ],
    "verbose": true,
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!**/*.d.ts",
      "!**/index.ts",
      "!src/contracts/**"
    ],
    "coverageDirectory": ".coverage",
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": ".coverage"
        }
      ]
    ]
  }
}
