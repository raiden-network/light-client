{
  "compilerOptions": {
    "target": "es6",
    "module": "esNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "pretty": true,
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "baseUrl": ".",
    "paths": {
      "raiden-ts/*": ["src/*"]
    },
    "typeRoots": ["./typings", "./node_modules/@types"]
  }
}
